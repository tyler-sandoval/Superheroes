@model IEnumerable<Superheroes.EF.DATA.Character>

@{
    ViewBag.Title = "All Characters";
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Occupation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbilityOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbilityTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbilityThree)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alignment.Name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Race)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Occupation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbilityOne)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbilityTwo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbilityThree)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alignment.Name)
                </td>
                <td>
                    @if (User.IsInRole("Superhero") || User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.CharID }) @:| 
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.CharID }) @:|
                        @Html.ActionLink("Delete", "Delete", new { id = item.CharID })
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>
